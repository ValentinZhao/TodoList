<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>VueExec</title>
	<link rel="stylesheet" href="bootstrap.min.css">
</head>
<body>
	<div id="app" class="col-xs-4">
		<span>{{ text }}</span>
		<ul>
			<li v-for="todo in todos"> {{ todo.text }} </li>
		</ul>
	</div>
	<div id="app-1" class="col-xs-4">
		<span>{{ msg }}</span><br>
		<input type="text" v-model="msg">
		<button @click="reverseMsg">Reverse</button><br>
		<button class="btn btn-primary" :class="{ active: isActive, disabled: isDisabled }">CLICK ME</button>
	</div>
	<div id="app-2" class="col-xs-4">
		<ul>
			<shop-item v-for="item in shopLists" :item="item"></shop-item>
		</ul>
	</div>
	
	<script src="vue.js"></script>
	<script>
		Vue.component('shop-item', {
			props:[ 'item' ],//props里面的属性，才可以在组件中利用v-bind的方式获得父元素传来的数据
			template: "<li>{{ item.text }}</li>"
		});
		var vm1 = new Vue({
			el: '#app',
			data:{
				text: "Hello World!",
				todos:[
					{text: "mow the lawn"},
					{text: "walk the dog"},
					{text: "scratch the wall"}
				]
			}
		});

		var vm2 = new Vue({
			el: '#app-1',
			data: {
				msg: "Hello Vue.js!",
				isActive: false,
				isDisabled: false
			},
			methods:{
				reverseMsg: function(){
					this.msg =  this.msg.split('').reverse().join('');
				}
			}
		});

		var vm3 = new Vue({
			el: '#app-2',
			data: {
				shopLists: [
					{text: "百醇"},
					{text: "薯片"},
					{text: "slippers"},
					{text: "pajamas"}
				]
			}
		});
	</script>
</body>
</html>